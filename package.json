{
    "name": "encore-vscode-extension",
    "displayName": "Encore VSCode Extension",
    "description": "The Encore VsCode extension help enhancing the development experience in Encore projects. Easily run test and debug encore, and access code snippets all within the convenience of your VSCode environment",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "Programming Languages",
        "Snippets",
        "Debuggers",
        "Testing"
    ],
    "activationEvents": [
        "onLanguage:go"
    ],
    "extensionDependencies": [
        "golang.go"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "encore.runDebugger",
                "title": "Encore: Start Debugging",
                "category": "Debug"
            }
        ],
        "debuggers": [
            {
                "label": "Encore Debugging",
                "program": "encore",
                "type": "encore-debug",
                "initialConfigurations": [
                    {
                        "name": "Encore Debugging",
                        "type": "encore-debug",
                        "request": "launch"
                    }
                ],
                "configurationSnippets": [
                    {
                        "label": "Encore Debug: Configuration",
                        "description": "automatic attach debug based on workspace and encore.app ID",
                        "body": {
                            "name": "Encore Debugging",
                            "type": "encore-debug",
                            "request": "launch"
                        }
                    }
                ]
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "pnpm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
        "lint": "eslint src --ext ts",
        "test": "vscode-test"
    },
    "devDependencies": {
        "@types/vscode": "^1.85.0",
        "@types/mocha": "^10.0.6",
        "@types/node": "18.x",
        "@typescript-eslint/eslint-plugin": "^6.13.1",
        "@typescript-eslint/parser": "^6.13.1",
        "eslint": "^8.54.0",
        "typescript": "^5.3.2",
        "ts-loader": "^9.5.1",
        "webpack": "^5.89.0",
        "webpack-cli": "^5.1.4",
        "@vscode/test-cli": "^0.0.4",
        "@vscode/test-electron": "^2.3.8"
    }
}
